  <ingredients>
    <ingredient num="0">3 ; gold potatoes </ingredient>
    <ingredient num="1">2 cups ; vinegar ; (480 mL) </ingredient>
    <ingredient num="2">1 tablespoon ; salt </ingredient>
    <ingredient num="3">1 tablespoon ; pepper </ingredient>
  </ingredients>
