<recipe>
  <title>Sweet Soy Chicken Wings Recipe by Tasty</title>
  <url>https://tasty.co/recipe/sweet-soy-chicken-wings</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">8 ; chicken wings </ingredient>
    <ingredient num="1">salt, to taste </ingredient>
    <ingredient num="2">pepper, to taste </ingredient>
    <ingredient num="3">potato starch, to dredge </ingredient>
    <ingredient num="4">frying oil, as needed </ingredient>
    <ingredient num="5">½ cup ; soy sauce ; (120 mL) </ingredient>
    <ingredient num="6">¼ cup ; mirin ; (50 mL) </ingredient>
    <ingredient num="7">¼ cup ; sugar ; (50 g) </ingredient>
    <ingredient num="8">¼ cup ; sake ; (50 mL) </ingredient>
    <ingredient num="9">1 clove ; garlic, grated </ingredient>
    <ingredient num="10">toasted white sesame seeds </ingredient>
  </ingredients>
  <categories>
    <category num="0">Japanese</category>
    <category num="1">Appetizers</category>
    <category num="2">Kid-Friendly</category>
    <category num="3">Game Day</category>
    <category num="4">BBQ</category>
  </categories>
