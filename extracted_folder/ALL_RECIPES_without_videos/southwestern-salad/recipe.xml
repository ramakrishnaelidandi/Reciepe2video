  <ingredients>
    <ingredient num="0">½ ; avocado </ingredient>
    <ingredient num="1">1 ; lime, juiced </ingredient>
    <ingredient num="2">2 cloves ; garlic </ingredient>
    <ingredient num="3">½ teaspoon ; salt </ingredient>
    <ingredient num="4">½ cup ; water ; (120 mL) </ingredient>
    <ingredient num="5">½ ; green bell pepper, chopped </ingredient>
    <ingredient num="6">½ cup ; corn ; (85 g) </ingredient>
    <ingredient num="7">½ cup ; cherry tomato, halved ; (100 g) </ingredient>
    <ingredient num="8">¼ cup ; quinoa, cooked ; (40 g) </ingredient>
    <ingredient num="9">½ cup ; black beans ; (85 g) </ingredient>
    <ingredient num="10">1 cup ; spinach ; (40 g) </ingredient>
  </ingredients>
