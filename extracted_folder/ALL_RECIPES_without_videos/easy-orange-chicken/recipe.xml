  <type>single</type>
  <ingredients>
    <ingredient num="0">3 ; boneless, skinless chicken breasts, cubed </ingredient>
    <ingredient num="1">¼ cup ; soy sauce ; (60 g) </ingredient>
    <ingredient num="2">2 tablespoons ; orange juice </ingredient>
    <ingredient num="3">¼ cup ; cornstarch ; (30 g) </ingredient>
    <ingredient num="4">2 tablespoons ; oil </ingredient>
    <ingredient num="5">¾ cup ; orange juice ; (180 mL) </ingredient>
    <ingredient num="6">1 tablespoon ; soy sauce </ingredient>
    <ingredient num="7">1 tablespoon ; hoisin sauce </ingredient>
    <ingredient num="8">1 tablespoon ; rice vinegar </ingredient>
    <ingredient num="9">2 tablespoons ; brown sugar </ingredient>
    <ingredient num="10">1 tablespoon ; cornstarch </ingredient>
  </ingredients>
