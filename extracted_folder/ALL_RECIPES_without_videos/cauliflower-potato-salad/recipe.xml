  <type>single</type>
  <ingredients>
    <ingredient num="0">1 head ; cauliflower </ingredient>
    <ingredient num="1">salt, to taste </ingredient>
    <ingredient num="2">pepper, to taste </ingredient>
    <ingredient num="3">2 tablespoons ; olive oil </ingredient>
    <ingredient num="4">3 ; eggs, hard-boiled, chopped </ingredient>
    <ingredient num="5">3 stalks ; celery, diced </ingredient>
    <ingredient num="6">½ ; red onion, diced </ingredient>
    <ingredient num="7">½ cup ; greek yogurt ; (140 g) </ingredient>
    <ingredient num="8">1 tablespoon ; dijon mustard </ingredient>
    <ingredient num="9">1 tablespoon ; honey </ingredient>
    <ingredient num="10">2 tablespoons ; dill, chopped </ingredient>
    <ingredient num="11">1 tablespoon ; olive oil </ingredient>
    <ingredient num="12">1 clove ; garlic, crushed </ingredient>
    <ingredient num="13">½ ; lemon, juiced </ingredient>
  </ingredients>
