  <ingredients>
    <ingredient num="0">3 tablespoons ; butter </ingredient>
    <ingredient num="1">3 cloves ; garlic, chopped </ingredient>
    <ingredient num="2">1 lb ; shrimp, peeled and deveined ; (450 g) </ingredient>
    <ingredient num="3">1 teaspoon ; salt </ingredient>
    <ingredient num="4">1 teaspoon ; pepper </ingredient>
    <ingredient num="5">½ ; lemon, juiced </ingredient>
    <ingredient num="6">1 teaspoon ; red chili flake </ingredient>
    <ingredient num="7">¼ cup ; fresh parsley, chopped ; (10 g) </ingredient>
    <ingredient num="8">½ lb ; spaghetti, cooked ; (225 g) </ingredient>
  </ingredients>
