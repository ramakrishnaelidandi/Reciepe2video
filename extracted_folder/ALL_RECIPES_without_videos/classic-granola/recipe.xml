  <ingredients>
    <ingredient num="0">2 cups ; rolled oats ; (200 g) </ingredient>
    <ingredient num="1">½ cup ; almond, sliced ; (70 g) </ingredient>
    <ingredient num="2">½ teaspoon ; cinnamon </ingredient>
    <ingredient num="3">¼ teaspoon ; salt </ingredient>
    <ingredient num="4">3 tablespoons ; coconut oil, melted </ingredient>
    <ingredient num="5">1 teaspoon ; vanilla extract </ingredient>
    <ingredient num="6">¼ cup ; maple syrup ; (55 g) </ingredient>
    <ingredient num="7">2 tablespoons ; honey </ingredient>
    <ingredient num="8">greek yogurt, to serve </ingredient>
    <ingredient num="9">assorted berry, to serve </ingredient>
  </ingredients>
