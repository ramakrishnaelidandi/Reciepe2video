  <ingredients>
    <ingredient num="0">1 ; baguette, 6 inch (15 cm) </ingredient>
    <ingredient num="1">¼ cup ; olive oil ; (60 mL) </ingredient>
    <ingredient num="2">3 ; medium tomatoes, diced </ingredient>
    <ingredient num="3">1 clove ; garlic, minced </ingredient>
    <ingredient num="4">1 teaspoon ; balsamic vinegar </ingredient>
    <ingredient num="5">1 tablespoon ; fresh basil, chopped </ingredient>
    <ingredient num="6">½ teaspoon ; salt </ingredient>
    <ingredient num="7">½ teaspoon ; pepper </ingredient>
    <ingredient num="8">1 clove ; garlic, whole </ingredient>
  </ingredients>
