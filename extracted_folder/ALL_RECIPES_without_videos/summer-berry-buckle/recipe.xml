<recipe>
  <title>Summer Berry Buckle Recipe by Tasty</title>
  <url>https://tasty.co/recipe/summer-berry-buckle</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">½ cup ; butter, softened ; (115 g) </ingredient>
    <ingredient num="1">½ cup ; sugar ; (100 g) </ingredient>
    <ingredient num="2">¼ cup ; brown sugar ; (55 g) </ingredient>
    <ingredient num="3">3 ; eggs </ingredient>
    <ingredient num="4">1 teaspoon ; vanilla </ingredient>
    <ingredient num="5">1 ½ cups ; flour ; (185 g) </ingredient>
    <ingredient num="6">½ teaspoon ; salt </ingredient>
    <ingredient num="7">1 teaspoon ; cinnamon </ingredient>
    <ingredient num="8">¼ teaspoon ; baking powder </ingredient>
    <ingredient num="9">4 ½ cups ; mixed berries, blackberries, blueberries, raspberries ; (790 g) </ingredient>
    <ingredient num="10">powdered sugar, to taste </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Vegetarian</category>
    <category num="2">Desserts</category>
    <category num="3">Casual Party</category>
    <category num="4">BBQ</category>
    <category num="5">Weeknight</category>
    <category num="6">Indulgent Sweets</category>
    <category num="7">Special Occasion</category>
  </categories>
