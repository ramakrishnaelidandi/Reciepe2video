  <ingredients>
    <ingredient num="0">2 tablespoons ; olive oil </ingredient>
    <ingredient num="1">1 ; onion, chopped </ingredient>
    <ingredient num="2">1 lb ; ground beef ; (455 g) </ingredient>
    <ingredient num="3">1 teaspoon ; salt </ingredient>
    <ingredient num="4">1 teaspoon ; pepper </ingredient>
    <ingredient num="5">28 oz ; crushed tomato, 1 can ; (795 g) </ingredient>
    <ingredient num="6">½ cup ; vodka ; (120 mL) </ingredient>
    <ingredient num="7">½ teaspoon ; red chili flake </ingredient>
    <ingredient num="8">½ cup ; heavy cream ; (120 mL) </ingredient>
    <ingredient num="9">4 cups ; penne pasta ; (400 g) </ingredient>
    <ingredient num="10">fresh parsley, to garnish </ingredient>
    <ingredient num="11">Parmesan, to garnish </ingredient>
  </ingredients>
