  <ingredients>
    <ingredient num="0">2 cups ; coconut flakes ; (150 g) </ingredient>
    <ingredient num="1">2 tablespoons ; soy sauce </ingredient>
    <ingredient num="2">1 tablespoon ; maple syrup </ingredient>
    <ingredient num="3">½ teaspoon ; liquid smoke, optional </ingredient>
    <ingredient num="4">coconut oil, for greasing </ingredient>
  </ingredients>
  <categories>
