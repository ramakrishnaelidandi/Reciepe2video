  <ingredients>
    <ingredient num="0">1 lb ; potato ; (455 g) </ingredient>
    <ingredient num="1">olive oil, to taste </ingredient>
    <ingredient num="2">salt, to taste </ingredient>
    <ingredient num="3">pepper, to taste </ingredient>
    <ingredient num="4">3 tablespoons ; lemon juice </ingredient>
    <ingredient num="5">2 cloves ; garlic, minced </ingredient>
    <ingredient num="6">½ teaspoon ; onion powder </ingredient>
    <ingredient num="7">½ teaspoon ; paprika </ingredient>
    <ingredient num="8">½ teaspoon ; dried thyme </ingredient>
    <ingredient num="9">½ teaspoon ; dried parsley </ingredient>
    <ingredient num="10">2 tablespoons ; honey </ingredient>
    <ingredient num="11">2 ; salmon fillets </ingredient>
    <ingredient num="12">1 bunch ; asparagus </ingredient>
    <ingredient num="13">6 slices ; lemon </ingredient>
    <ingredient num="14">4 sprigs ; fresh thyme </ingredient>
  </ingredients>
