<recipe>
  <title>Easy Homemade Chicken Curry Recipe by Tasty</title>
  <url>https://tasty.co/recipe/easy-homemade-chicken-curry</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">4 ; boneless, skinless chicken breasts </ingredient>
    <ingredient num="1">1 tablespoon ; turmeric </ingredient>
    <ingredient num="2">1 tablespoon ; chili powder </ingredient>
    <ingredient num="3">1 tablespoon ; ground cumin </ingredient>
    <ingredient num="4">1 tablespoon ; garam masala </ingredient>
    <ingredient num="5">½ tablespoon ; ground ginger </ingredient>
    <ingredient num="6">2 tablespoons ; white wine vinegar </ingredient>
    <ingredient num="7">oil, for frying </ingredient>
    <ingredient num="8">1 ; red chili, chopped </ingredient>
    <ingredient num="9">2 cups ; tomato, chopped ; (400 g) </ingredient>
    <ingredient num="10">½ cup ; water ; (100 mL) </ingredient>
    <ingredient num="11">salt, to taste </ingredient>
    <ingredient num="12">pepper, to taste </ingredient>
    <ingredient num="13">rice, to serve </ingredient>
    <ingredient num="14">fresh coriander, to serve, chopped </ingredient>
  </ingredients>
