  <ingredients>
    <ingredient num="0">3 cups ; fresh spinach ; (120 g) </ingredient>
    <ingredient num="1">1 cup ; fresh basil ; (40 g) </ingredient>
    <ingredient num="2">¾ cup ; pine nuts ; (100 g) </ingredient>
    <ingredient num="3">¼ cup ; parmesan cheese ; (25 g) </ingredient>
    <ingredient num="4">3 cloves ; garlic </ingredient>
    <ingredient num="5">salt, to taste </ingredient>
    <ingredient num="6">¼ cup ; lemon juice ; (60 mL) </ingredient>
    <ingredient num="7">½ cup ; olive oil ; (120 mL) </ingredient>
    <ingredient num="8">1 box ; whole wheat pasta, prepared </ingredient>
    <ingredient num="9">2 cups ; cherry tomato, halved ; (400 g) </ingredient>
    <ingredient num="10">½ cup ; mozzarella cheese ; (50 g) </ingredient>
  </ingredients>
