  <ingredients>
    <ingredient num="0">2 cups ; red wine ; (480 mL) </ingredient>
    <ingredient num="1">3 cups ; water ; (720 mL) </ingredient>
    <ingredient num="2">salt, to taste </ingredient>
    <ingredient num="3">16 oz ; spaghetti ; (455 g) </ingredient>
    <ingredient num="4">2 tablespoons ; butter </ingredient>
    <ingredient num="5">2 cloves ; garlic, smashed </ingredient>
    <ingredient num="6">¼ cup ; pine nuts ; (35 g) </ingredient>
    <ingredient num="7">½ teaspoon ; red pepper flakes </ingredient>
    <ingredient num="8">grated parmesan cheese, for serving </ingredient>
  </ingredients>
