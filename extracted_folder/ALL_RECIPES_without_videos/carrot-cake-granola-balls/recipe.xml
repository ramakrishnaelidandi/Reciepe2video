  <type>single</type>
  <ingredients>
    <ingredient num="0">1 ¼ cups ; oats ; (125 g) </ingredient>
    <ingredient num="1">⅖ cup ; walnuts ; (40 g) </ingredient>
    <ingredient num="2">1 teaspoon ; almond </ingredient>
    <ingredient num="3">¾ cup ; peanut butter ; (190 g) </ingredient>
    <ingredient num="4">3 teaspoons ; honey </ingredient>
    <ingredient num="5">1 teaspoon ; cinnamon </ingredient>
    <ingredient num="6">⅗ cup ; carrot, grated ; (40 g) </ingredient>
    <ingredient num="7">⅓ cup ; raisin ; (50 g) </ingredient>
  </ingredients>
