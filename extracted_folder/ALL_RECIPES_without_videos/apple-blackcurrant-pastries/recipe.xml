<recipe>
  <title>Apple &amp; Blackcurrant Pastries Recipe by Tasty</title>
  <url>https://tasty.co/recipe/apple-blackcurrant-pastries</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">1 sheet ; puff pastry </ingredient>
    <ingredient num="1">8 teaspoons ; blackcurrant jam </ingredient>
    <ingredient num="2">4 ; apples, sliced </ingredient>
    <ingredient num="3">2 tablespoons ; sugar </ingredient>
    <ingredient num="4">2 tablespoons ; cinnamon </ingredient>
    <ingredient num="5">1 ; egg, beaten </ingredient>
    <ingredient num="6">1 cup ; icing sugar ; (150 g) </ingredient>
    <ingredient num="7">3 tablespoons ; milk </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">British</category>
