<recipe>
  <title>Cheesy Eggplant Pizza Recipe by Tasty</title>
  <url>https://tasty.co/recipe/cheesy-eggplant-pizza</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">1 ; large globe eggplant </ingredient>
    <ingredient num="1">salt, to taste </ingredient>
    <ingredient num="2">olive oil </ingredient>
    <ingredient num="3">2 cups ; mozzarella cheese ; (200 g) </ingredient>
    <ingredient num="4">1 cup ; cheddar cheese ; (100 g) </ingredient>
    <ingredient num="5">1 jar ; marinara sauce </ingredient>
    <ingredient num="6">½ cup ; parmesan cheese ; (55 g) </ingredient>
    <ingredient num="7">¼ cup ; fresh basil ; (10 g) </ingredient>
    <ingredient num="8">1 tablespoon ; garlic powder </ingredient>
    <ingredient num="9">1 teaspoon ; salt </ingredient>
    <ingredient num="10">1 teaspoon ; pepper </ingredient>
    <ingredient num="11">½ teaspoon ; red pepper flakes </ingredient>
  </ingredients>
