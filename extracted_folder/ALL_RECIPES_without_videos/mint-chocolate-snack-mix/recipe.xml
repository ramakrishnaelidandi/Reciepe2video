  <ingredients>
    <ingredient num="0">1 teaspoon ; peppermint extract </ingredient>
    <ingredient num="1">5 cups ; rice cereal ; (150 g) </ingredient>
    <ingredient num="2">1 cup ; powdered sugar ; (120 g) </ingredient>
    <ingredient num="3">¼ cup ; cocoa powder ; (30 g) </ingredient>
    <ingredient num="4">½ cup ; mint chocolate candy ; (90 g) </ingredient>
    <ingredient num="5">1 ½ cups ; semi sweet chocolate ; (255 g) </ingredient>
    <ingredient num="6">1 teaspoon ; coconut oil </ingredient>
  </ingredients>
