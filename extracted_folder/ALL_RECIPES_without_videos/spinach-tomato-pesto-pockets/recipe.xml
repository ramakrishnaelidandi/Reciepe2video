  <ingredients>
    <ingredient num="0">1 sheet ; puff pastry </ingredient>
    <ingredient num="1">¼ cup ; pesto ; (55 g) </ingredient>
    <ingredient num="2">1 cup ; spinach, cooked ; (40 g) </ingredient>
    <ingredient num="3">2 ; roma tomatoes, sliced </ingredient>
    <ingredient num="4">½ cup ; shredded mozzarella cheese ; (50 g) </ingredient>
    <ingredient num="5">1 ; egg, for egg wash </ingredient>
  </ingredients>
