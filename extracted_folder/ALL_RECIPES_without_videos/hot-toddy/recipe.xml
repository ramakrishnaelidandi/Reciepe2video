  <ingredients>
    <ingredient num="0">14 cups ; hot water ; (3 ⅓ L) </ingredient>
    <ingredient num="1">⅔ cup ; fresh lemon juice ; (160 mL) </ingredient>
    <ingredient num="2">⅔ cup ; honey ; (225 g) </ingredient>
    <ingredient num="3">5 ; star anises </ingredient>
    <ingredient num="4">10 ; black tea bags </ingredient>
    <ingredient num="5">2 ; lemons, thinly sliced </ingredient>
    <ingredient num="6">8 fl oz ; whiskey ; (235 mL) </ingredient>
    <ingredient num="7">lemon wedge, for garnish </ingredient>
  </ingredients>
  <categories>
    <category num="0">Dairy-Free</category>
    <category num="1">Vegetarian</category>
    <category num="2">Drinks</category>
    <category num="3">Happy Hour</category>
    <category num="4">Casual Party</category>
  </categories>
