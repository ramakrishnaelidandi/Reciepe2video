  <ingredients>
    <ingredient num="0">1 cup ; almond, whole ; (140 g) </ingredient>
    <ingredient num="1">¼ teaspoon ; salt </ingredient>
    <ingredient num="2">1 pinch ; cayenne pepper, optional </ingredient>
    <ingredient num="3">2 tablespoons ; honey </ingredient>
    <ingredient num="4">1 teaspoon ; olive oil </ingredient>
  </ingredients>
