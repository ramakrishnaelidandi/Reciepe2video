<recipe>
  <title>Super Soft Banana Bread Cookies Recipe by Tasty</title>
  <url>https://tasty.co/recipe/super-soft-banana-bread-cookies</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">½ cup ; sugar ; (100 g) </ingredient>
    <ingredient num="1">¼ cup ; brown sugar ; (55 g) </ingredient>
    <ingredient num="2">1 teaspoon ; vanilla extract </ingredient>
    <ingredient num="3">½ cup ; butter, softened ; (115 g) </ingredient>
    <ingredient num="4">½ cup ; greek yogurt ; (140 g) </ingredient>
    <ingredient num="5">1 ; egg </ingredient>
    <ingredient num="6">2 ; ripe bananas </ingredient>
    <ingredient num="7">2 ½ cups ; flour ; (310 g) </ingredient>
    <ingredient num="8">½ teaspoon ; baking powder </ingredient>
    <ingredient num="9">½ teaspoon ; baking soda </ingredient>
    <ingredient num="10">1 pinch ; salt </ingredient>
    <ingredient num="11">2 teaspoons ; cinnamon </ingredient>
    <ingredient num="12">½ cup ; chocolate chips ; (85 g) </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Vegetarian</category>
    <category num="2">Desserts</category>
    <category num="3">Kid-Friendly</category>
