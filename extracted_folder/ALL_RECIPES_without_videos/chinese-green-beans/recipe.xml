<recipe>
  <title>Chinese Green Beans Recipe by Tasty</title>
  <url>https://tasty.co/recipe/chinese-green-beans</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">¼ cup ; vegetable oil ; (60 mL) </ingredient>
    <ingredient num="1">1 lb ; string bean ; (450 g) </ingredient>
    <ingredient num="2">1 tablespoon ; garlic </ingredient>
    <ingredient num="3">1 teaspoon ; ginger </ingredient>
    <ingredient num="4">3 ; scallions, chopped </ingredient>
    <ingredient num="5">4 oz ; shiitake mushrooms ; (115 g) </ingredient>
    <ingredient num="6">½ lb ; ground pork ; (230 g) </ingredient>
    <ingredient num="7">4 ; dried red chilies </ingredient>
    <ingredient num="8">1 tablespoon ; chili paste </ingredient>
    <ingredient num="9">2 tablespoons ; soy sauce </ingredient>
    <ingredient num="10">1 tablespoon ; rice wine </ingredient>
    <ingredient num="11">white pepper, dash </ingredient>
  </ingredients>
  <categories>
    <category num="0">Chinese</category>
    <category num="1">Dairy-Free</category>
