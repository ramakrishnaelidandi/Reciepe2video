<recipe>
  <title>Cheesecake Baked Apples Recipe by Tasty</title>
  <url>https://tasty.co/recipe/cinnamon-cheesecake-baked-apples</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">8 oz ; cream cheese, softened ; (225 g) </ingredient>
    <ingredient num="1">¼ cup ; sugar ; (50 g) </ingredient>
    <ingredient num="2">1 teaspoon ; cinnamon </ingredient>
    <ingredient num="3">1 teaspoon ; vanilla extract </ingredient>
    <ingredient num="4">1 ; egg </ingredient>
    <ingredient num="5">1 ; honeycrisp apple, or apple of your choice </ingredient>
    <ingredient num="6">1 cup ; whipping cream ; (235 mL) </ingredient>
    <ingredient num="7">¾ cup ; maple syrup ; (165 g) </ingredient>
    <ingredient num="8">½ cup ; crushed pecan ; (60 g) </ingredient>
    <ingredient num="9">graham cracker, crushed </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Vegetarian</category>
    <category num="2">Desserts</category>
    <category num="3">Date Night</category>
