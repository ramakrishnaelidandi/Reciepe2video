<recipe>
  <title>Cajun Shrimp Bake Recipe by Tasty</title>
  <url>https://tasty.co/recipe/cajun-shrimp-bake</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">4 ; andouille sausages, chopped </ingredient>
    <ingredient num="1">1 lb ; shrimp, peeled and deveined ; (455 g) </ingredient>
    <ingredient num="2">4 ; red potatoes, quartered </ingredient>
    <ingredient num="3">2 pieces ; corn, quartered </ingredient>
    <ingredient num="4">2 tablespoons ; oil, divided </ingredient>
    <ingredient num="5">1 tablespoon ; butter, cubed </ingredient>
    <ingredient num="6">4 cloves ; garlic, minced </ingredient>
    <ingredient num="7">2 teaspoons ; garlic powder </ingredient>
    <ingredient num="8">2 ½ teaspoons ; paprika </ingredient>
    <ingredient num="9">1 ¼ teaspoons ; dried oregano </ingredient>
    <ingredient num="10">1 teaspoon ; onion powder </ingredient>
    <ingredient num="11">1 ¼ teaspoons ; dried thyme </ingredient>
    <ingredient num="12">½ teaspoon ; red pepper flakes </ingredient>
    <ingredient num="13">1 teaspoon ; cayenne pepper </ingredient>
    <ingredient num="14">2 teaspoons ; salt </ingredient>
    <ingredient num="15">1 teaspoon ; pepper </ingredient>
    <ingredient num="16">fresh parsley, chopped </ingredient>
    <ingredient num="17">lemon wedge, to garnish </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Seafood</category>
    <category num="2">Comfort Food</category>
    <category num="3">Dinner</category>
    <category num="4">Casual Party</category>
    <category num="5">Weeknight</category>
    <category num="6">Fusion</category>
  </categories>
