  <ingredients>
    <ingredient num="0">1 cup ; rosé wine ; (235 mL) </ingredient>
    <ingredient num="1">1 ½ oz ; gelatin powder ; (40 g) </ingredient>
    <ingredient num="2">½ cup ; sugar ; (100 g) </ingredient>
    <ingredient num="3">strawberry, diced, optional </ingredient>
    <ingredient num="4">blueberry, optional </ingredient>
    <ingredient num="5">rasberries, optional </ingredient>
  </ingredients>
