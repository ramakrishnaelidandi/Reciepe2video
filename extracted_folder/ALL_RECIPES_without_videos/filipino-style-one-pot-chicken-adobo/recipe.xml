<recipe>
  <title>Filipino-Style One Pot Chicken Adobo Recipe by Tasty</title>
  <url>https://tasty.co/recipe/filipino-style-one-pot-chicken-adobo</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">2 ½ lb ; chicken drumstick ; (1 kg) </ingredient>
    <ingredient num="1">¾ cup ; soy sauce ; (200 mL) </ingredient>
    <ingredient num="2">⅓ cup ; rice vinegar ; (80 mL) </ingredient>
    <ingredient num="3">15 cloves ; garlic cloves </ingredient>
    <ingredient num="4">1 tablespoon ; ground pepper </ingredient>
    <ingredient num="5">5 tablespoons ; palm sugar </ingredient>
    <ingredient num="6">3 ; bay leaves </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Comfort Food</category>
    <category num="2">Dinner</category>
    <category num="3">Casual Party</category>
