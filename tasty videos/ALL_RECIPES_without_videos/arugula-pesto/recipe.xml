  <ingredients>
    <ingredient num="0">4 cups ; fresh arugula, packed ; (80 g) </ingredient>
    <ingredient num="1">⅓ cup ; walnuts ; (35 g) </ingredient>
    <ingredient num="2">2 cloves ; garlic </ingredient>
    <ingredient num="3">1 tablespoon ; lemon juice </ingredient>
    <ingredient num="4">2 tablespoons ; water </ingredient>
    <ingredient num="5">¾ teaspoon ; salt </ingredient>
    <ingredient num="6">⅓ cup ; olive oil ; (80 g) </ingredient>
  </ingredients>
