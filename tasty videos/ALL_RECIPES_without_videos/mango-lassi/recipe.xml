  <ingredients>
    <ingredient num="0">1 ; mango </ingredient>
    <ingredient num="1">1 tablespoon ; sugar </ingredient>
    <ingredient num="2">1 cup ; milk ; (240 mL) </ingredient>
    <ingredient num="3">1 cup ; plain yogurt ; (245 g) </ingredient>
  </ingredients>
