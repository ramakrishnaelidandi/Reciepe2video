<recipe>
  <title>3-ingredient Mango Sorbet Recipe by Tasty</title>
  <url>https://tasty.co/recipe/3-ingredient-mango-sorbet</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">4 ; mangoes, diced </ingredient>
    <ingredient num="1">½ cup ; honey ; (170 g) </ingredient>
    <ingredient num="2">½ cup ; water ; (120 mL) </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Italian</category>
    <category num="2">Healthy</category>
    <category num="3">Vegetarian</category>
    <category num="4">Desserts</category>
    <category num="5">Casual Party</category>
    <category num="6">Fusion</category>
  </categories>
