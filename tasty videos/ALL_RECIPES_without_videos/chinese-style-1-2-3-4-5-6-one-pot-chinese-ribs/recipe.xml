  <ingredients>
    <ingredient num="0">1 tablespoon ; oil </ingredient>
    <ingredient num="1">1 ⅓ lb ; pork rib ; (600 g) </ingredient>
    <ingredient num="2">1 tablespoon ; cooking wine </ingredient>
    <ingredient num="3">2 tablespoons ; rice vinegar </ingredient>
    <ingredient num="4">3 tablespoons ; sugar </ingredient>
    <ingredient num="5">4 tablespoons ; soy sauce </ingredient>
    <ingredient num="6">5 tablespoons ; water </ingredient>
    <ingredient num="7">6 cloves ; garlic </ingredient>
