  <ingredients>
    <ingredient num="0">1 lb ; fresh strawberry , quartered ; (455 g) </ingredient>
    <ingredient num="1">4 ; kiwis, peeled and diced </ingredient>
    <ingredient num="2">2 ; mangoes, diced </ingredient>
    <ingredient num="3">2 ; bananas, sliced </ingredient>
    <ingredient num="4">12 oz ; fresh blurberry ; (340 g) </ingredient>
    <ingredient num="5">2 tablespoons ; honey </ingredient>
    <ingredient num="6">1 ; lime, juiced </ingredient>
  </ingredients>
