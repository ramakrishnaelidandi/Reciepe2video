  <ingredients>
    <ingredient num="0">2 tablespoons ; oil </ingredient>
    <ingredient num="1">2 ; chicken breasts, thinly sliced </ingredient>
    <ingredient num="2">3 cloves ; garlic, minced </ingredient>
    <ingredient num="3">6 strips ; bacon, cooked, chopped </ingredient>
    <ingredient num="4">5 oz ; spinach ; (140 g) </ingredient>
    <ingredient num="5">2 teaspoons ; salt </ingredient>
    <ingredient num="6">2 teaspoons ; pepper </ingredient>
    <ingredient num="7">2 cups ; heavy cream ; (470 mL) </ingredient>
    <ingredient num="8">1 ¼ cups ; rotini pasta, cooked ; (250 g) </ingredient>
    <ingredient num="9">1 cup ; parmesan cheese ; (100 g) </ingredient>
    <ingredient num="10">½ cup ; fresh parsley, chopped ; (15 g) </ingredient>
  </ingredients>
