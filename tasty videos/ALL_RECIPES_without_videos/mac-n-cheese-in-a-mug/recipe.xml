  <ingredients>
    <ingredient num="0">½ cup ; elbow pasta ; (50 g) </ingredient>
    <ingredient num="1">½ cup ; water ; (120 mL) </ingredient>
    <ingredient num="2">2 pinches ; salt, divided </ingredient>
    <ingredient num="3">2 tablespoons ; sweetened almond milk </ingredient>
    <ingredient num="4">2 teaspoons ; vegan butter </ingredient>
    <ingredient num="5">2 tablespoons ; nutritional yeast </ingredient>
    <ingredient num="6">paprika, to taste </ingredient>
  </ingredients>
