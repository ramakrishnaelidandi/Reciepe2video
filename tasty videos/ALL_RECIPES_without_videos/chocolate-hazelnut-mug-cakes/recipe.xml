  <ingredients>
    <ingredient num="0">1 cup ; chocolate hazelnut spread, divided ; (300 g) </ingredient>
    <ingredient num="1">2 ; large eggs </ingredient>
    <ingredient num="2">¼ cup ; all-purpose flour ; (30 g) </ingredient>
  </ingredients>
