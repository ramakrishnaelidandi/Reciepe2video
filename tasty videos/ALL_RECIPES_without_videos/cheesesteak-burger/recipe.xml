  <ingredients>
    <ingredient num="0">¾ lb ; ground beef ; (340 g) </ingredient>
    <ingredient num="1">½ tablespoon ; salt </ingredient>
    <ingredient num="2">½ tablespoon ; pepper </ingredient>
    <ingredient num="3">2 tablespoons ; white onion, diced, divided </ingredient>
    <ingredient num="4">1 slice ; provolone cheese, quartered </ingredient>
    <ingredient num="5">1 ; sesame bun, butter-toasted </ingredient>
    <ingredient num="6">1 ; green leaf lettuce </ingredient>
    <ingredient num="7">1 tablespoon ; white onion, diced </ingredient>
  </ingredients>
