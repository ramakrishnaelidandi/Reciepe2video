  <ingredients>
    <ingredient num="0">4 cups ; walnuts ; (400 g) </ingredient>
    <ingredient num="1">2 ; egg whites </ingredient>
    <ingredient num="2">½ cup ; sugar ; (100 g) </ingredient>
    <ingredient num="3">⅛ teaspoon ; salt </ingredient>
  </ingredients>
  <categories>
    <category num="0">Indulgent Sweets</category>
    <category num="1">Bakery Goods</category>
  </categories>
