  <ingredients>
    <ingredient num="0">17 oz ; pork belly ; (500 g) </ingredient>
    <ingredient num="1">2 tablespoons ; crushed garlic </ingredient>
    <ingredient num="2">1 tablespoon ; honey </ingredient>
    <ingredient num="3">1 tablespoon ; cooking wine </ingredient>
    <ingredient num="4">2 tablespoons ; soy sauce </ingredient>
    <ingredient num="5">1 tablespoon ; oyster sauce </ingredient>
    <ingredient num="6">1 teaspoon ; five spice </ingredient>
    <ingredient num="7">½ teaspoon ; black pepper </ingredient>
    <ingredient num="8">½ cup ; sugar ; (100 g) </ingredient>
    <ingredient num="9">2 pieces ; preserved tofu, optional, available in local Asian supermarkets </ingredient>
  </ingredients>
