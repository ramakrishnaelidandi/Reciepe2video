<recipe>
  <title>Spicy Tomato Coconut Chicken Recipe by Tasty</title>
  <url>https://tasty.co/recipe/spicy-tomato-coconut-chicken</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">3 lb ; chicken, quartered ; (1 ½ kg) </ingredient>
    <ingredient num="1">salt, to taste </ingredient>
    <ingredient num="2">pepper, to taste </ingredient>
    <ingredient num="3">2 tablespoons ; olive oil </ingredient>
    <ingredient num="4">3 cloves ; garlic, minced </ingredient>
    <ingredient num="5">1 tablespoon ; ginger </ingredient>
    <ingredient num="6">3 ; jalapeñoes, deseeded and diced </ingredient>
    <ingredient num="7">1 ; onion, chopped </ingredient>
    <ingredient num="8">1 ¼ cups ; tomato puree ; (280 g) </ingredient>
    <ingredient num="9">1 cup ; coconut milk, unsweetened ; (240 mL) </ingredient>
    <ingredient num="10">1 cup ; chicken stock ; (240 mL) </ingredient>
    <ingredient num="11">fresh cilantro, or parsley, for garnish, chopped </ingredient>
  </ingredients>
