  <ingredients>
    <ingredient num="0">1 tablespoon ; oil </ingredient>
    <ingredient num="1">3 cloves ; garlic, minced </ingredient>
    <ingredient num="2">salt, to taste </ingredient>
    <ingredient num="3">pepper, to taste </ingredient>
    <ingredient num="4">1 ; onion, diced </ingredient>
    <ingredient num="5">1 ; red bell pepper, diced </ingredient>
    <ingredient num="6">1 ; potato, cubed </ingredient>
    <ingredient num="7">1 ear ; corn, kernels removed </ingredient>
    <ingredient num="8">6 cups ; vegetable broth ; (1 Â½ L) </ingredient>
    <ingredient num="9">2 cups ; water ; (480 mL) </ingredient>
    <ingredient num="10">1 tablespoon ; dried thyme </ingredient>
    <ingredient num="11">2 tablespoons ; paprika </ingredient>
    <ingredient num="12">1 ; bay leaf </ingredient>
    <ingredient num="13">1 cup ; milk, milk alternative ; (240 mL) </ingredient>
  </ingredients>
