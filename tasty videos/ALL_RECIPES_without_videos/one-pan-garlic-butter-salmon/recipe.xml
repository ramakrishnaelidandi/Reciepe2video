<recipe>
  <title>One-pan Garlic Butter Salmon Recipe by Tasty</title>
  <url>https://tasty.co/recipe/one-pan-garlic-butter-salmon</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">6 oz ; salmon fillet, 4 fillets ; (170 g) </ingredient>
    <ingredient num="1">½ cup ; butter, melted ; (115 g) </ingredient>
    <ingredient num="2">3 cloves ; garlic </ingredient>
    <ingredient num="3">½ ; lemon, juiced </ingredient>
    <ingredient num="4">salt, to taste </ingredient>
    <ingredient num="5">pepper, to taste </ingredient>
    <ingredient num="6">4 cups ; broccoli floret ; (900 g) </ingredient>
    <ingredient num="7">olive oil </ingredient>
    <ingredient num="8">¼ cup ; parmesan cheese ; (30 g) </ingredient>
    <ingredient num="9">fresh parsley, to garnish </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Seafood</category>
    <category num="2">Gluten-Free</category>
    <category num="3">Healthy</category>
    <category num="4">Low-Carb</category>
    <category num="5">Dinner</category>
    <category num="6">Lunch</category>
    <category num="7">Date Night</category>
    <category num="8">Weeknight</category>
  </categories>
  <video>
