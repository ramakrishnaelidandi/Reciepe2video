<recipe>
  <title>Potato Bhajias Recipe by Tasty</title>
  <url>https://tasty.co/recipe/potato-bhajias</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">1 lb ; potato ; (500 g) </ingredient>
    <ingredient num="1">3 ¼ cups ; chickpea flour ; (300 g) </ingredient>
    <ingredient num="2">½ teaspoon ; turmeric </ingredient>
    <ingredient num="3">1 teaspoon ; chili powder </ingredient>
    <ingredient num="4">1 teaspoon ; salt </ingredient>
    <ingredient num="5">1 teaspoon ; pepper </ingredient>
    <ingredient num="6">1 teaspoon ; bicarbonate of soda </ingredient>
    <ingredient num="7">2 ; green chillis, chopped and deseeded </ingredient>
    <ingredient num="8">½ cup ; fresh coriander, chopped ; (20 g) </ingredient>
    <ingredient num="9">2 cups ; water ; (500 mL) </ingredient>
    <ingredient num="10">1 bottle ; ketchup </ingredient>
    <ingredient num="11">fresh coriander, to taste </ingredient>
    <ingredient num="12">1 tablespoon ; chili powder </ingredient>
    <ingredient num="13">1 tablespoon ; cumin </ingredient>
    <ingredient num="14">4 cloves ; garlic, crushed </ingredient>
  </ingredients>
