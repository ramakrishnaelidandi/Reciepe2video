  <ingredients>
    <ingredient num="0">3 tablespoons ; all-purpose flour </ingredient>
    <ingredient num="1">2 tablespoons ; cocoa powder </ingredient>
    <ingredient num="2">3 tablespoons ; sugar </ingredient>
    <ingredient num="3">¼ teaspoon ; baking powder </ingredient>
    <ingredient num="4">3 tablespoons ; vegetable oil, or canola oil </ingredient>
    <ingredient num="5">¼ cup ; milk ; (60 mL) </ingredient>
    <ingredient num="6">3 tablespoons ; chocolate chips </ingredient>
    <ingredient num="7">whipped cream, to serve </ingredient>
    <ingredient num="8">blueberry, to serve </ingredient>
    <ingredient num="9">raspberry, to serve </ingredient>
    <ingredient num="10">fresh mint, to serve </ingredient>
  </ingredients>
