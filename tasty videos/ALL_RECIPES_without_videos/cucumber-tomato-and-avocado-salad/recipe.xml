  <ingredients>
    <ingredient num="0">1 ; english cucumber, diced </ingredient>
    <ingredient num="1">4 ; roma tomatoes, diced </ingredient>
    <ingredient num="2">3 ; ripe avocados, diced </ingredient>
    <ingredient num="3">½ ; red onion, diced </ingredient>
    <ingredient num="4">¼ cup ; fresh cilantro, chopped ; (10 g) </ingredient>
    <ingredient num="5">1 ; lemon, juiced </ingredient>
    <ingredient num="6">salt, to taste </ingredient>
    <ingredient num="7">pepper, to taste </ingredient>
    <ingredient num="8">2 tablespoons ; extra virgin olive oil </ingredient>
  </ingredients>
