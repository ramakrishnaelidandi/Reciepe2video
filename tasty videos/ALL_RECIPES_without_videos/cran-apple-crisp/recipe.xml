<recipe>
  <title>Cran-Apple Crisp Recipe by Tasty</title>
  <url>https://tasty.co/recipe/cran-apple-crisp</url>
  <type>single</type>
  <ingredients>
    <ingredient num="0">5 ; apples, diced </ingredient>
    <ingredient num="1">½ ; lemon, juiced </ingredient>
    <ingredient num="2">1 ½ cups ; cranberry ; (150 g) </ingredient>
    <ingredient num="3">2 tablespoons ; cornstarch </ingredient>
    <ingredient num="4">3 tablespoons ; sugar </ingredient>
    <ingredient num="5">¼ cup ; maple syrup ; (55 g) </ingredient>
    <ingredient num="6">1 teaspoon ; cinnamon </ingredient>
    <ingredient num="7">1 cup ; rolled oats ; (100 g) </ingredient>
    <ingredient num="8">⅓ cup ; brown sugar ; (70 g) </ingredient>
    <ingredient num="9">3 tablespoons ; flour </ingredient>
    <ingredient num="10">4 tablespoons ; butter </ingredient>
    <ingredient num="11">½ teaspoon ; salt </ingredient>
    <ingredient num="12">ice cream, to taste </ingredient>
  </ingredients>
  <categories>
    <category num="0">American</category>
    <category num="1">Vegetarian</category>
    <category num="2">Desserts</category>
    <category num="3">Kid-Friendly</category>
    <category num="4">Snacks</category>
    <category num="5">Date Night</category>
    <category num="6">Casual Party</category>
    <category num="7">Indulgent Sweets</category>
  </categories>
