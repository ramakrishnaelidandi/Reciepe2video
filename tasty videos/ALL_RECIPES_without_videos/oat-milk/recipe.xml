  <type>single</type>
  <ingredients>
    <ingredient num="0">1 cup ; rolled oats ; (100 g) </ingredient>
    <ingredient num="1">salt, to taste </ingredient>
    <ingredient num="2">1 teaspoon ; vanilla extract, optional </ingredient>
    <ingredient num="3">2 ; dates, pitted, optional </ingredient>
    <ingredient num="4">4 cups ; water ; (1 L) </ingredient>
  </ingredients>
