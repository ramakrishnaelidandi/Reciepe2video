<recipe>
  <title>Chocolate Meringue Tart Recipe by Tasty</title>
  <url>https://tasty.co/recipe/chocolate-meringue-tart</url>
  <type>compilation</type>
  <comp_url>https://tasty.co/compilation/7-easy-recipes-for-chocolate-lovers</comp_url>
  <ingredients>
    <ingredient num="0">1 ; pre-baked tart shell, 25 cm (9 in) </ingredient>
    <ingredient num="1">1 ½ cups ; chocolate ; (250 g) </ingredient>
    <ingredient num="2">1 cup ; butter ; (200 g) </ingredient>
    <ingredient num="3">2 ; eggs </ingredient>
    <ingredient num="4">3 ; egg yolks </ingredient>
    <ingredient num="5">¾ cup ; plain flour ; (100 g) </ingredient>
    <ingredient num="6">¼ cup ; sugar ; (50 g) </ingredient>
    <ingredient num="7">6 ; egg whites </ingredient>
    <ingredient num="8">1 ½ cups ; caster sugar ; (300 g) </ingredient>
    <ingredient num="9">1 tablespoon ; vanilla extract </ingredient>
    <ingredient num="10">1 teaspoon ; wine vinegar </ingredient>
    <ingredient num="11">¾ cup ; cocoa powder ; (100 g) </ingredient>
  </ingredients>
