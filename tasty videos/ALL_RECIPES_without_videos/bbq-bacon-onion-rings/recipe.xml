  <ingredients>
    <ingredient num="0">2 ; onions </ingredient>
    <ingredient num="1">20 slices ; bacon </ingredient>
    <ingredient num="2">½ cup ; BBQ sauce ; (145 g) </ingredient>
    <ingredient num="3">¼ cup ; honey ; (85 g) </ingredient>
  </ingredients>
