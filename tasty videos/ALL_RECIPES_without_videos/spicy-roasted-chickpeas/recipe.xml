  <ingredients>
    <ingredient num="0">15 oz ; chickpeas, 1 can, drained and rinsed ; (400 g) </ingredient>
    <ingredient num="1">1 tablespoon ; olive oil </ingredient>
    <ingredient num="2">1 teaspoon ; ground cumin </ingredient>
    <ingredient num="3">1 teaspoon ; chili powder </ingredient>
    <ingredient num="4">½ teaspoon ; cayenne pepper </ingredient>
    <ingredient num="5">½ teaspoon ; salt </ingredient>
  </ingredients>
